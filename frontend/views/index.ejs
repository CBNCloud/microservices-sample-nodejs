<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <Style>
    form {
  margin:0 auto;
  width:300px
}
input {
  margin-bottom:3px;
  padding:10px;
  width: 100%;
  border:1px solid #CCC
}
button {
  padding:10px
}
label {
  cursor:pointer
}
#form-switch {
  display:none
}
#register-form {
  display:none
}
#form-switch:checked~#register-form {
  display:block
}
#form-switch:checked~#login-form {
  display:none
}
    </Style>


    <link href="static/noty/lib/noty.css" rel="stylesheet" > 
    <script src="static/noty/lib/noty.js"></script>
    <script src="static/sweetalert/dist/sweetalert.min.js"></script>
</head>
<body>
    <input type='checkbox' id='form-switch'>
<form id='login-form' action="" method='post'>
  <input type="text" placeholder="Username" required name="username">
  <input type="password" placeholder="Password" required name="password">
  <button type='submit'>Login</button>
</form>

<script>
<% if(data !== null){%>
  swal('<%= data.alert.title %>','<%= data.alert.text %>', '<%= data.alert.icon %>')
  <% } %>
</script>
</body>
</html>